#!/usr/bin/env bash

# Converts a glTF .glb file to .gltf.

if [ $# -ne 1 ]; then
    echo "Usage: $0 <input.glb>"
    exit 1
fi

input_file="$1"

if [ ! -f "${input_file}" ]; then
    echo "Error: File '${input_file}' does not exist."
    exit 1
fi

base_name="${input_file%.*}"
output_file="${base_name}.gltf"
gltf-transform copy "${input_file}" "${output_file}"
